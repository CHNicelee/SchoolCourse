<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csu.edu.ice.schoolcourse.NewsActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></FrameLayout>

    <RadioGroup
        android:checkedButton="@id/rb_news"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_news"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/selector_news_radio_button"
            android:text="新闻"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_width="74dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_news_radio_button"
            android:gravity="center"
            android:padding="5dp"
            android:text="新闻" />
        <RadioButton
            android:layout_weight="1"

            android:padding="5dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/selector_news_radio_button"
            android:text="新闻"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_weight="1"

            android:padding="5dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/selector_news_radio_button"
            android:text="新闻"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_weight="1"

            android:padding="5dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/selector_news_radio_button"
            android:text="新闻"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

</LinearLayout>
